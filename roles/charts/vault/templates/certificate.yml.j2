apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: vault-server-cert
spec:
  secretName: vault-server-tls
  duration: 24h
  renewBefore: 144m  # roughly 10% of 24h
  dnsNames:
  - vault
  - vault.vault
  - vault.vault.svc
  - vault.vault.svc.cluster.local
  - {{ vault['host'] }}
  ipAddresses:
  - 127.0.0.1
  commonName: Vault Server Certificate
  issuerRef:
    name: root-ca-issuer
    kind: ClusterIssuer
    group: cert-manager.io