apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: prometheus-cert
  namespace: monitory
spec:
  commonName: Prometheus Cert
  secretName: prometheus-tls
  duration: 24h
  renewBefore: 144m  # roughly 10% of 24h
  dnsNames:
  - {{ prometheus['host'] }}
  issuerRef:
    name: root-ca-issuer
    kind: ClusterIssuer
    group: cert-manager.io