apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: grafana-selfsigned-ca
  namespace: monitory
spec:
  isCA: true
  commonName: {{ grafana['host'] }}
  secretName: {{ grafana['tls'] }}
  privateKey:
    algorithm: ECDSA
    size: 256
  issuerRef:
    name: selfsigned-cluster-issuer
    kind: ClusterIssuer
    group: cert-manager.io